{
  "definitions": {
    "semver": {
      "type": "string",
      "examples": [
        "0.0.0"
      ],
      "pattern": "^(0|[1-9]\\d*)\\.(0|[1-9]\\d*)\\.(0|[1-9]\\d*)(?:-((?:0|[1-9]\\d*|\\d*[a-zA-Z-][0-9a-zA-Z-]*)(?:\\.(?:0|[1-9]\\d*|\\d*[a-zA-Z-][0-9a-zA-Z-]*))*))?(?:\\+([0-9a-zA-Z-]+(?:\\.[0-9a-zA-Z-]+)*))?$"
    },
    "verrange": {
      "type": "string",
      "pattern": "^(?:[~\\^*]=?)?(0|[1-9]\\d*)\\.(0|[1-9]\\d*)\\.(0|[1-9]\\d*)(?:-((?:0|[1-9]\\d*|\\d*[a-zA-Z-][0-9a-zA-Z-]*)(?:\\.(?:0|[1-9]\\d*|\\d*[a-zA-Z-][0-9a-zA-Z-]*))*))?(?:\\+([0-9a-zA-Z-]+(?:\\.[0-9a-zA-Z-]+)*))?(?:-(0|[1-9]\\d*)\\.(0|[1-9]\\d*)\\.(0|[1-9]\\d*)(?:-((?:0|[1-9]\\d*|\\d*[a-zA-Z-][0-9a-zA-Z-]*)(?:\\.(?:0|[1-9]\\d*|\\d*[a-zA-Z-][0-9a-zA-Z-]*))*))?(?:\\+([0-9a-zA-Z-]+(?:\\.[0-9a-zA-Z-]+)*))?)?"
    },
    "url": {
      "type": "string",
      "pattern": "https?:\/\/(www\\.)?[-a-zA-Z0-9@:%._\\+~#=]{2,256}\\.[a-z]{2,}(\/[-a-zA-Z0-9@:%_\\+.~#?&//=]*)?"
    }
  },
  "$schema": "http://json-schema.org/draft-07/schema",
  "type": "object",
  "title": "root",
  "required": [
    "name",
    "id",
    "version",
    "gameVersion",
    "description",
    "author"
  ],
  "properties": {
    "name": {
      "$id": "#/properties/name",
      "type": "string",
      "title": "plugin name",
      "examples": [
        "Beat Saber IPA"
      ],
      "pattern": "^(.*)$"
    },
    "id": {
      "$id": "#/properties/id",
      "type": ["string","null"],
      "title": "modsaber id",
      "examples": [
        "beatsaber-ipa-reloaded"
      ],
      "pattern": "^([^\\s]*)$"
    },
    "version": {
      "$id": "#/properties/version",
      "$ref": "#/definitions/semver",
      "title": "plugin version"
    },
    "gameVersion": {
      "$id": "#/properties/gameVersion",
      "$ref": "#/definitions/semver",
      "title": "compatable game version"
    },
    "description": {
      "$id": "#/properties/description",
      "type": "string",
      "title": "plugin description",
      "examples": [
        "A build of IPA designed for Beat Saber"
      ],
      "pattern": "^(.*)$"
    },
    "author": {
      "$id": "#/properties/author",
      "type": "string",
      "title": "plugin author",
      "examples": [
        "DaNike",
        "xyonico"
      ]
    },
    "dependsOn": {
      "$id": "#/properties/dependsOn",
      "type": "object",
      "title": "dependencies",
      "patternProperties": {
        "^([^\\s]*)$": {
          "$ref": "#/definitions/verrange",
          "title": "a dependency"
        }
      }
    },
    "conflictsWith": {
      "$id": "#/properties/conflictsWith",
      "type": "object",
      "title": "incompatabilities",
      "patternProperties": {
        "^([^\\s]*)$": {
          "$ref": "#/definitions/verrange",
          "title": "an incompatible mod item"
        }
      }
    },
    "loadAfter": {
      "$id": "#/properties/loadAfter",
      "type": "array",
      "title": "plugins to load before this one",
      "items": {
        "type": "string",
        "title": "the plugin id to load first"
      }
    },
    "loadBefore": {
      "$id": "#/properties/loadBefore",
      "type": "array",
      "title": "plugins to load after this one",
      "items": {
        "type": "string",
        "title": "the plugin id to load after"
      }
    },
    "features": {
      "$id": "#/properties/features",
      "type": "array",
      "title": "features to enable for plugin",
      "uniqueItems": true,
      "items": {
        "type": "string",
        "title": "a feature to enable"
      }
    },
    "icon": {
      "$id": "#/properties/icon",
      "type": "string",
      "title": "the icon to represent the plugin, as a PNG",
      "pattern": ".*\\.png"
    },
    "links": {
      "$id": "#/properties/links",
      "type": "object",
      "title": "various links associated with the mod",
      "properties": {
        "project-home": {
          "$id": "#/properties/links/properties/project-home",
          "$ref": "#/definitions/url",
          "title": "a link to the project home page. if not specified, same as project-source"
        },
        "project-source": {
          "$id": "#/properties/links/properties/project-source",
          "$ref": "#/definitions/url",
          "title": "a link to the project source. if not specified, same as project-home."
        },
        "donate": {
          "$id": "#/properties/links/properties/donate",
          "$ref": "#/definitions/url",
          "title": "a link to a donations page"
        }
      }
    }
  }
}